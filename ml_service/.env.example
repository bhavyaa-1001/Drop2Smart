# Configuration Example for Drop2Smart ML Service

# Copy this file to .env and customize as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host to bind the service (0.0.0.0 for all interfaces, localhost for local only)
HOST=0.0.0.0

# Port number for the service
PORT=8000

# Enable auto-reload for development (set to False for production)
RELOAD=True

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Path to trained Ksat model (relative to ml_service directory)
MODEL_PATH=models/ksat_model.pkl

# Path to model metadata
MODEL_METADATA_PATH=models/model_metadata.json

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# Path to groundwater database
GROUNDWATER_DATA_PATH=data/groundwater_level_data.json

# =============================================================================
# API CONFIGURATION
# =============================================================================

# SoilGrids API URL
SOILGRIDS_API_URL=https://rest.isric.org/soilgrids/v2.0/properties/query

# API request timeout (seconds)
API_TIMEOUT=30

# Maximum number of batch predictions per request
BATCH_MAX_SIZE=100

# =============================================================================
# MODEL TRAINING CONFIGURATION
# =============================================================================

# Number of Optuna optimization trials (more = better but slower)
OPTUNA_TRIALS=50

# Number of synthetic samples to generate (if no training data provided)
SYNTHETIC_SAMPLES=5000

# Random seed for reproducibility
RANDOM_SEED=42

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=ml_service.log

# Enable console logging
CONSOLE_LOGGING=True

# =============================================================================
# KSAT PREDICTION CONFIGURATION
# =============================================================================

# Minimum Ksat value (mm/hr)
KSAT_MIN=0.5

# Maximum Ksat value (mm/hr)
KSAT_MAX=350.0

# Base confidence score for predictions
CONFIDENCE_BASE=0.8

# Minimum confidence score
CONFIDENCE_MIN=0.5

# Maximum confidence score
CONFIDENCE_MAX=0.95

# =============================================================================
# SOILGRIDS CONFIGURATION
# =============================================================================

# Soil depth to query
SOILGRIDS_DEPTH=0-5cm

# Value type to retrieve
SOILGRIDS_VALUE_TYPE=mean

# Default soil properties (fallback if API fails)
# Values in SoilGrids scale (0-1000 for sand/silt/clay)
DEFAULT_SAND=400
DEFAULT_SILT=350
DEFAULT_CLAY=250
DEFAULT_OCD=15

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated, use * for all)
CORS_ORIGINS=*

# Allow credentials
CORS_CREDENTIALS=True

# Allowed methods
CORS_METHODS=*

# Allowed headers
CORS_HEADERS=*

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Number of workers for production (leave empty for auto-detection)
# WORKERS=4

# Enable access logs
# ACCESS_LOG=True

# Enable proxy headers (if behind reverse proxy)
# PROXY_HEADERS=True

# =============================================================================
# NOTES
# =============================================================================

# 1. For development: Keep RELOAD=True
# 2. For production: 
#    - Set RELOAD=False
#    - Set proper WORKERS count
#    - Use proper logging configuration
#    - Restrict CORS_ORIGINS
#    - Consider using gunicorn or similar WSGI server

# 3. To use this configuration:
#    - Copy this file to .env
#    - Uncomment and modify values as needed
#    - The service will automatically load .env if it exists

# 4. Environment variables take precedence over .env file
